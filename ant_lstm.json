{
    "name": "AntLstm",
    "n_gpu": 1,
    
    "arch": {
        "type": "MujocoLstmPolicy",
        "mode": "recurrent",
        "args": {
            "obs_dim": 111,
            "act_dim": 8,
            "batch_size": 32
        }
    },
    "data_loader": {
        "type": "MujocoSeqDataLoader",
        "args":{
            "pickle_file": "data/Mujoco/Ant-v2.pkl",
            "seq_size": 25,
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mujoco_loss",
    "metrics": [
        "l1_dist", "l2_dist"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 100,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,
        
        "tensorboardX": true,
        "log_dir": "saved/runs",

        "loss_weights": [1.0,0.1]
    }
}
